@using WebAruhaz.Models.WebShopModels
@using Microsoft.AspNetCore.Http;
@model Product

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <div class="w3-container">
            @{
                HttpContextAccessor httpContextAccessor = new HttpContextAccessor();
                string localhost = httpContextAccessor.HttpContext.Request.Scheme + "://" + httpContextAccessor.HttpContext.Request.Host.Value ;
                string imageurl = localhost + "/images/" + Model.SmallImage;
            }
            <img src="@imageurl" alt=""  style="padding: 1px; width: 200px; height: 200px">
        </div>

        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Product" asp-action="Details" asp-route-productId="@Model.ProductId">@Model.Name</a>
            </h3>
            <p>@Model.Description</p>
        </div>

        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success" id="cartButton" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@Model.ProductId">
                    Kosárba
                </a>
            </p>
        </div>

    </div>
</div>