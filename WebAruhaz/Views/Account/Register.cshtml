@using WebAruhaz.Models.ViewModels.AccountViewModels
@model RegisterViewModel
<div class="register-box">
    <div class="register-logo">
        <p> Regisztráció</p>
    </div>
    <div class="register-box-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div class="form-group has-feedback">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <label asp-for="Password">Jelszó</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Jelszó" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <label asp-for="ConfirmPassword">Megerősítő jelszó</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Jelszó ismétlése" />
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox">Elfogadom a felhasználási <a href="#">feltételeket</a>
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-5">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Regisztráció</button>
                </div>
                <!-- /.col -->
            </div>

        </form>

        <div class="social-auth-links text-center">
            <p>- Vagy -</p>
            <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                <i class="fa fa-facebook"></i> Bejelentkezés
                Facebook-kal
            </a>
            <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                <i class="fa fa-google-plus"></i>Bejelentkezés
                Google-val</a>
        </div>
    </div>
    <!-- /.form-box -->
</div>

