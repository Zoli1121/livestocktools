@using WebAruhaz.Models.ViewModels.WebShopViewModels
@model WebShopLoginViewModel

<div class="login-box">
    <div class="login-logo">
        <p>Bejelentkezés</p>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div class="form-group has-feedback">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <label asp-for="Password">Jelszó</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Jelszó" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox" asp-for="RememberMe">  @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-5">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Bejelentkezés</button>
                </div>
                <!-- /.col -->
            </div>
            <div class="social-auth-links text-center">
                <p>- Vagy -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                    <i class="fa fa-facebook"></i> Bejelentkezés
                    Facebook-kal
                </a>
                <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                    <i class="fa fa-google-plus"></i> Bejelentkezés
                    Google-val
                </a>
            </div>
            <!-- /.social-auth-links -->
            <a asp-action="ForgotPassword">Elfelejtettem a jelszavamat</a><br>
            <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="text-center">Regisztráció</a>
        </form>

    </div>
    <!-- /.login-box-body -->
</div>


