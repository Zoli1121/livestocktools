@using WebAruhaz.Models.ViewModels.AccountViewModels
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<div class="register-box">
    <div class="register-logo">
        <p> Elfelejtette jelszavát?</p>
    </div>
    <div class="register-box-body">
        <p class="login-box-msg">Elfelejtett jelszó</p>
        <form asp-action="ForgotPassword" method="post">
            <div class="form-group has-feedback">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block btn-flat">Jelszó alaphelyzetbe állítása</button>
        </form>
    </div>
    <!-- /.form-box -->
</div>
