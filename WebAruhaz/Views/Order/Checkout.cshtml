@using WebAruhaz.Models.WebShopModels
@model Order

<div class="row orderForm ">
    <h3 class="text-center">Már csak egy lépés a rendeléshez!</h3>
    <form asp-action="Checkout" method="post" class="form-horizontal" role="form">
        
        <div class="form-group">
            <label asp-for="Address" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

   


        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-8">
                <input class="btn btn-success" type="submit" value="Megrendelés" />
                @*<input class="btn btn-default" type="submit" value="Return " />*@
            </div>
        </div>
    </form>
</div>